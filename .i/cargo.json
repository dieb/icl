{
  "command": "cargo",
  "description": "Rust package manager and build tool",
  "presets": [],
  "steps": [
    {
      "id": "subcommand",
      "prompt": "What do you want to do?",
      "type": "choice",
      "options": [
        { "label": "Build project", "chain": "cargo-build" },
        { "label": "Run project", "chain": "cargo-run" },
        { "label": "Run tests", "chain": "cargo-test" },
        { "label": "Check for errors", "flag": "check" },
        { "label": "Run clippy (lints)", "chain": "cargo-clippy" },
        { "label": "Format code", "chain": "cargo-fmt" },
        { "label": "Add dependency", "flag": "add" },
        { "label": "Update dependencies", "flag": "update" },
        { "label": "Generate docs", "flag": "doc" },
        { "label": "Clean build artifacts", "flag": "clean" }
      ]
    }
  ]
}
