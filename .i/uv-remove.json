{
  "command": "uv remove",
  "description": "Remove dependencies from the project",
  "placeholder_options": {
    "<package>": "uv pip list --format=columns 2>/dev/null | tail -n +3 | awk '{print $1\"\\t\"$2}'"
  },
  "presets": [
    { "label": "Remove package", "flags": "<package>" },
    { "label": "Remove dev dependency", "flags": "--dev <package>" }
  ],
  "steps": [
    {
      "id": "package",
      "prompt": "Package to remove",
      "type": "text",
      "placeholder": "requests"
    },
    {
      "id": "dev",
      "prompt": "Remove from dev dependencies?",
      "type": "toggle",
      "flag": "--dev"
    }
  ]
}
