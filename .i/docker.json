{
  "command": "docker",
  "description": "Docker container management",
  "presets": [],
  "steps": [
    {
      "id": "subcommand",
      "prompt": "What do you want to do?",
      "type": "choice",
      "options": [
        { "label": "Run a container", "chain": "docker-run" },
        { "label": "Stop a container", "chain": "docker-stop" },
        { "label": "Remove a container", "chain": "docker-rm" },
        { "label": "List containers", "chain": "docker-ps" },
        { "label": "View logs", "chain": "docker-logs" },
        { "label": "Execute in container", "chain": "docker-exec" },
        { "label": "Build an image", "chain": "docker-build" },
        { "label": "Remove an image", "chain": "docker-rmi" },
        { "label": "List images", "chain": "docker-images" }
      ]
    }
  ]
}
