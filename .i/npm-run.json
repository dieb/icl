{
  "command": "npm run",
  "description": "Run a script from package.json",
  "placeholder_options": {
    "<script>": "npm run --json 2>/dev/null | jq -r 'keys[]' 2>/dev/null || cat package.json 2>/dev/null | jq -r '.scripts | keys[]' 2>/dev/null"
  },
  "presets": [
    {
      "label": "Start",
      "flags": "start"
    },
    {
      "label": "Test",
      "flags": "test"
    },
    {
      "label": "Build",
      "flags": "build"
    },
    {
      "label": "Dev",
      "flags": "dev"
    },
    {
      "label": "Lint",
      "flags": "lint"
    }
  ],
  "steps": [
    {
      "id": "script",
      "prompt": "Script to run",
      "type": "text",
      "placeholder": "dev"
    },
    {
      "id": "args",
      "prompt": "Arguments to pass to script",
      "type": "text",
      "placeholder": "-- --port 3000"
    }
  ]
}
