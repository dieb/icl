{
  "command": "head",
  "description": "Display first lines of files",
  "presets": [
    { "label": "First 10 lines", "flags": "<file>" },
    { "label": "First 20 lines", "flags": "-n 20 <file>" },
    { "label": "First 50 lines", "flags": "-n 50 <file>" },
    { "label": "First 100 lines", "flags": "-n 100 <file>" },
    { "label": "First 1KB", "flags": "-c 1024 <file>" }
  ],
  "steps": [
    {
      "id": "mode",
      "prompt": "Limit by?",
      "type": "choice",
      "options": [
        { "label": "Number of lines", "flag": null },
        { "label": "Number of bytes", "flag": null }
      ]
    },
    {
      "id": "lines",
      "prompt": "Number of lines",
      "type": "text",
      "flag": "-n",
      "placeholder": "10",
      "when": { "mode": "Number of lines" }
    },
    {
      "id": "bytes",
      "prompt": "Number of bytes",
      "type": "text",
      "flag": "-c",
      "placeholder": "1024",
      "when": { "mode": "Number of bytes" }
    },
    {
      "id": "quiet",
      "prompt": "Suppress filename headers (multiple files)?",
      "type": "toggle",
      "flag": "-q"
    },
    {
      "id": "file",
      "prompt": "File(s) to display",
      "type": "text",
      "flag": null,
      "placeholder": "file"
    }
  ]
}
